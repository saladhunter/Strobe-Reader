{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-debug",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "Speedreader.xcodeproj",
                "-scheme",
                "Speedreader",
                "-configuration",
                "Debug",
                "-derivedDataPath",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.."
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build-release",
            "type": "shell",
            "command": "xcodebuild",
            "args": [
                "-project",
                "Speedreader.xcodeproj",
                "-scheme",
                "Speedreader",
                "-configuration",
                "Release",
                "-derivedDataPath",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.."
            },
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
